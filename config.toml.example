[discord]
token = "Enter bot token here" # Do not share this with anyone!
server_id = "YOUR_SERVER_ID" # Only allow the bot to talk in this server
channel_id = "YOUR_CHANNEL_ID" # Only allow the bot to talk in this channel
FreeWill = false # If true, the bot will respond to every message in the channel. If false, only when mentioned.

[ollama]
model = "llama3.2" # Some examples of valid input are "llama3.2" and "llama2-uncensored"

[system]
prompt = ""

[openrouter]
# Set enabled = true to use OpenRouter (remote) instead of the local Ollama model
enabled = false
# The OpenRouter model to use (e.g. "gpt-4o-mini", "anthropic/claude-2")
model = "gpt-4o-mini"
# Optional: override the OpenRouter endpoint URL if needed
url = "https://api.openrouter.ai/v1/chat/completions"

# IMPORTANT: Put your OpenRouter API key in a .env file:
# Create a file named .env with the content:
# OPENROUTER_KEY=your-key-here

[chaos]
# Settings for bot-to-bot interactions
enabled = false      # Set to true to enable chaos mode where bots can talk to each other
bot_id = ""         # The Discord ID of the other bot to talk with
chance = 0.3        # Chance (0.0-1.0) that the bot will reply to another bot
max_volleys = 5     # Maximum number of back-and-forth messages before stopping